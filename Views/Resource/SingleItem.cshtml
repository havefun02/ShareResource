@model ShareResource.Models.ViewModels.ImgResultViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Image " + Model.ImgId;
}

<div class="main-page">
    <div class="image-container">
        <div class="image-details">
            <h2 class="short-name font">Image name: @Model.FileName</h2>
            <span class="upload-date">Uploaded on: @Model.UploadDate.ToString("dd MMM yyyy")</span>
        </div>

        <img class="single-img" src="@Url.Content(Model.FileUrl)" alt="@Model.FileName" />

        <div class="author-details">
            <p>Author: <a href=@Url.Action("GetUserProfile","Resource",new { userId = Model.AuthorId })>@Model.AuthorName</a></p>

            <p>Email: <a href="mailto:@Model.AuthorEmail">@Model.AuthorEmail</a></p>
        </div>
    </div>
</div>

    <style>
        .image-container {
            max-width: 800px;
            margin: 0 auto;
            text-align: center;
        }

        .image-details {
            margin-bottom: 15px;
        }
        .font{
        font-size: 15px;
    }


        .upload-date {
            font-size: 12px;
            color: #888;
        }

        .single-img {
            max-width: 100%;
            height: auto;
            margin: 20px 0;
        }

        .author-details {
            margin-top: 20px;
            font-size: 14px;
            text-align: left;
        }

            .author-details a {
                color: #007bff;
                text-decoration: none;
            }

                .author-details a:hover {
                    text-decoration: underline;
                }
    </style>
