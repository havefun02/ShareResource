@model ShareResource.Models.Dtos.ImgDto
@{
}

<form enctype="multipart/form-data" method="post" asp-action="Upload" asp-controller="Resource">
    <div class="form-group">
        <label for="fileName">File Name</label>
        <input type="text" class="form-control" id="fileName" name="FileName" required />
    </div>
    <div class="form-group">
        <label for="file">Select File</label>
        <input type="file" class="form-control-file" id="file" name="file" accept=".png, .jpg, .jpeg" />
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
</form> 