<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/bundle.css">
    <script src="~/js/bundle.js"></script>
    <style>
        
        
        html{
            height:100vh;
        }
        body{
            height:100%;
             display:flex;
             flex-direction:column;
        }

        footer {
            display:flex;
            justify-content:flex-end;
            padding: 10px;
            background-color: #f8f9fa; /* Background color for the footer */
            width: 100%; /* Ensure the footer takes full width */
        }
    </style>
</head>
<body>

            <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top px-3 fixed-top">
                <a class="navbar-brand" href="/explore">Main</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/">Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/About">About</a>
                </li>
            </ul>
        </div>
        @{
            var isLogged = Context.Request.Cookies["isLogged"] == "Yes";
        }

        <div class="login-group">
            @if (isLogged)
            {
                <form method="post" asp-action="Logout" asp-controller="Auth">
                    <button asp-action="Logout" asp-controller="Auth" class="btn">Logout</button>
                </form>
            }
            else
            {
                    <a href="/api/v1/auths/login"  class="btn">Login</a>
            }
        </div>

    </nav>
    }

    <main role="main" class="container" style="margin-top: 80px; flex:1">
        @RenderBody()
        
    </main>
    <footer >
        <div class="container">
            <p class="m-0">&copy; @DateTime.Now.Year - Sharing Application</p>
        </div>
    </footer>
    @RenderSection("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>
</body>

</html>
