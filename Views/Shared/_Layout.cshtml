<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/bundle.css">
    <script src="~/js/bundle.js"></script>
    <style>
        
        
        html{
            height:100vh;
        }
        body{
            height:100%;
             display:flex;
             flex-direction:column;
        }

        footer {
            display:flex;
            justify-content:flex-end;
            padding: 10px;
            background-color: #f8f9fa; /* Background color for the footer */
            width: 100%; /* Ensure the footer takes full width */
        }
    </style>
</head>
<body>
    @{
        var isLogged =Context.Request.Cookies["isLogged"] == "Yes";
    }

        @if (isLogged)
        {
            <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top px-3 fixed-top">
                <a class="navbar-brand" href="/">Main</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="Index">Index</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="Profile">Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/About">About</a>
                </li>
            </ul>
        </div>
        <div class="login-group">
                <a class="nav-link" href="Logout">Log out</a>
        </div>
    </nav>
    }

    <main role="main" class="container" style="margin-top: 80px; flex:1">
        @RenderBody()
        
    </main>
    <footer >
        <div class="container">
            <p class="m-0">&copy; @DateTime.Now.Year - Sharing Application</p>
        </div>
    </footer>
    @RenderSection("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRHIojI6Av7xqC9T94CqhvFuhaE3dB9vO53QF8udW"
            crossorigin="anonymous"></script>

    <!-- jQuery Validation CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"
            integrity="sha384-8zCR08GEOFTbaS+ErVoWv+vNwQ8xS7rkt3p8+1msrErU5mv6kOgLFGAjZ3xH7z14"
            crossorigin="anonymous"></script>

    <!-- jQuery Validation Unobtrusive CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"
            integrity="sha384-59XAB0NwghUPTjoOAI3JHYw7GpDmpB5e+5KJ8ocwRxW7r1kD+gfPEgpmDj3GO7zU"
            crossorigin="anonymous"></script>
</body>

</html>
