<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> <!-- Use full jQuery -->
    <link rel="stylesheet" href="~/css/main.css" />
    <style>
        
        
        html{
            height:100vh;
        }
        body{
            height:100%;
             display:flex;
             flex-direction:column;
        }

        footer {
            display:flex;
            justify-content:flex-end;
            padding: 10px;
            background-color: #f8f9fa; /* Background color for the footer */
            width: 100%; /* Ensure the footer takes full width */
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <a class="navbar-brand" href="/resources">Comunity</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/Resources/Main">Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/About">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Contact">Contact</a>
                </li>
            </ul>
        </div>
    </nav>

    <main role="main" class="container" style="margin-top: 80px; flex:1">
        @RenderBody()
        
    </main>
    <footer >
        <div class="container">
            <p class="m-0">&copy; @DateTime.Now.Year - Sharing Application</p>
        </div>
    </footer>
    <script src="~/js/site.js"> </script>
    @RenderSection("Scripts", required: false)
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
