<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> <!-- Use full jQuery -->
    <link rel="stylesheet" href="~/css/main.css" />
    <style>
        
        
        html{
            height:100vh;
        }
        body{
            height:100%;
             display:flex;
             flex-direction:column;
        }

        footer {
            display:flex;
            justify-content:flex-end;
            padding: 10px;
            background-color: #f8f9fa; /* Background color for the footer */
            width: 100%; /* Ensure the footer takes full width */
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top px-3">
        <a class="navbar-brand" href="/resources">Main</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/Resources/Profile">Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/About">About</a>
                </li>
            </ul>
            <div class="d-flex account-group">
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <span class="navbar-text me-3">Welcome!</span>
                    <form id="logoutForm"  class="d-inline">
                        <button type="submit" class="btn btn-danger">Logout</button>
                    </form>
                }
                else
                {
                    <a class="btn btn-outline-primary me-2" href="/Account/Login">Sign In</a>
                    <a class="btn btn-primary" href="/Account/Register">Sign Up</a>
                }
            </div>
        </div>
    </nav>

    <main role="main" class="container" style="margin-top: 80px; flex:1">
        @RenderBody()
        
    </main>
    <footer >
        <div class="container">
            <p class="m-0">&copy; @DateTime.Now.Year - Sharing Application</p>
        </div>
    </footer>
    <script src="~/js/site.js"> </script>
    @RenderSection("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>

</body>

</html>
