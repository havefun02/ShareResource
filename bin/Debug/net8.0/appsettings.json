{
  "routes": {
    "free-routes": [
      "/api/public",
      "/api/info",
      "/api/status"
    ]
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=ChattingApp;User=root;Password=lapphan;Port=3306;Pooling=true;Min Pool Size=5;Max Pool Size=100;"
  },
  "Jwt": {
    "Key": "dev-secret",
    "Issuer": "example-app.com",
    "Audience": "my-users",
    "AccessTokenExpiresInMinutes": 1,
    "RefreshTokenExpiresInDays": 1
  }
}